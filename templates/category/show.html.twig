{% extends "base.html.twig" %}

{% block title %}Catégorie {{ categoryName }} {% endblock %}

{% block body %}

{% for program in programs %}
		<div>
			<a href="{{ path('program_show', {id: program.id}) }}"><h2>{{ loop.index }}
				/
				{{ program.title }}
				- Catégorie :
				{{ program.category.name }}</h2></a>
			<p>{{ program.summary }}</p>
		</div>
	{% else %}
		Aucun série trouvée.
	{% endfor %}
<a href="{{ path('category_index') }}">

        Retour à la liste des Categories

    </a>
{% endblock %}
